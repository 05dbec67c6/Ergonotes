<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="com.ergonotes.database.NoteEntry" />

        <variable
            name="clickListener"
            type="com.ergonotes.mainfragment.recyclerview.NoteEntryTitlesListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_title"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:onClick="@{() -> clickListener.onClick(title)}"
        android:orientation="vertical"
        android:paddingStart="1dp"
        android:paddingTop="1dp"
        android:paddingEnd="1dp"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/title_string"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/silver"
            android:gravity="center|center_horizontal"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title_entry="@{title}"
            tools:text="@tools:sample/lorem" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>