<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="com.ergonotes.database.NoteEntry" />

        <variable
            name="clickListener"
            type="com.ergonotes.mainfragment.recyclerview.NoteEntryTitlesListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(title)}"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_string"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:background="@color/purple_200"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title_entry="@{title}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>