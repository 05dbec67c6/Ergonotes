<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="note"
            type="com.ergonotes.database.NoteEntry" />

        <variable
            name="clickListener"
            type="com.ergonotes.mainfragment.NoteEntryListener" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:onClick="@{() -> clickListener.onClick(note)}"
        >


        <TextView
            android:id="@+id/title_string"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#59D61F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note_string"
            app:note_TitleString="@{note}" />

        <TextView
            android:id="@+id/note_string"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#03A9F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:note_NoteString="@{note}" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>