<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragmentUIController">

    <fragment
        android:id="@+id/mainFragmentUIController"
        android:name="com.ergonotes.fragments.MainFragment"
        android:label="MainFragmentUIController"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_newFragment"
            app:destination="@id/newFragmentUIController" />
        <action
            android:id="@+id/action_mainFragment_to_dialogFragment"
            app:destination="@id/DialogFragment" />
        <argument
            android:name="noteEntryKey"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <fragment
        android:id="@+id/newFragmentUIController"
        android:name="com.ergonotes.fragments.NewFragment"
        android:label="NewFragmentUIController"
        tools:layout="@layout/fragment_new">
        <argument
            android:name="noteEntryKey"
            app:argType="long"
            android:defaultValue="-1L" />
        <action
            android:id="@+id/action_newFragment_to_mainFragment"
            app:destination="@id/mainFragmentUIController" />
        <action
            android:id="@+id/action_newFragment_to_dialogFragment"
            app:destination="@id/DialogFragment" />

    </fragment>
    <fragment
        android:id="@+id/DialogFragment"
        android:name="com.ergonotes.fragments.DialogFragment"
        android:label="DialogFragment"
        tools:layout="@layout/fragment_dialog">
        <action
            android:id="@+id/action_dialogFragment_to_mainFragment"
            app:destination="@id/mainFragmentUIController" />
        <argument
            android:name="noteEntryKey"
            app:argType="long"
            android:defaultValue="-1L" />
        <action
            android:id="@+id/action_dialogFragment_to_newFragment"
            app:destination="@id/newFragmentUIController" />
    </fragment>

</navigation>